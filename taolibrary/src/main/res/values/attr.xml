<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleRelativeLayoutLayout">
        <attr name="background_color" format="color" />
        <attr name="background_alpha" format="integer" />
    </declare-styleable>

    <!--圆角View-->
    <declare-styleable name="RoundView">
        <attr name="backgroudColor" format="color" />
        <!--是否设置为圆, true:设置为圆形  false:不设置   默认false-->
        <attr name="isCircle" format="boolean" />
        <!--是否切割背景, true:切割  false:不切割   默认false  切割背景会存在锯齿的情况-->
        <attr name="isClipBg" format="boolean" />
        <!--设置四个角度，设置此值后，单设其它各边无效-->
        <attr name="roundAll" format="dimension" />
        <!--设置顶部左边弧度-->
        <attr name="roundTopLeft" format="dimension" />
        <!--设置顶部右边弧度-->
        <attr name="roundTopRight" format="dimension" />
        <!--设置底部左边弧度-->
        <attr name="roundBottomLeft" format="dimension" />
        <!--设置底部右边弧度-->
        <attr name="roundBottomRight" format="dimension" />
        <!--设置渐变方向-->
        <attr name="angle" format="enum" >
            <!--从左到右渐变-->
            <enum name="left" value="1" />
            <!--从上到下渐变-->
            <enum name="top" value="2" />
            <!--从右到左渐变-->
            <enum name="right" value="3" />
            <!--从下到上渐变-->
            <enum name="bottom" value="4" />
        </attr>
        <!--渐变开始颜色-->
        <attr name="colorStart" format="color|reference" />
        <!--渐变结束颜色-->
        <attr name="colorEnd" format="color|reference" />
        <!--是否开启按压效果-->
        <attr name="isClickEffect" format="boolean" />
        <!--按压颜色-->
        <attr name="colorPress" format="color|reference" />
        <!--按压渐变开始颜色-->
        <attr name="colorPressStart" format="color|reference" />
        <!--按压渐变结束颜色-->
        <attr name="colorPressEnd" format="color|reference" />
        <!--添加文字内容   -->
        <attr name="text" format="string|reference" />
        <!--添加文字大小-->
        <attr name="textSize" format="dimension" />
        <!--添加文字颜色-->
        <attr name="textColor" format="color|reference" />
        <!--添加边框宽度-->
        <attr name="stroke_width" format="dimension" />
        <!--添加边框颜色-->
        <attr name="stroke_color" format="color|reference" />
        <!--是否开启阴影-->
        <attr name="isShadow" format="boolean" />
        <!--阴影四边角度弧度  向外扩充的半径-->
        <attr name="shadowRadius" format="dimension" />
        <!--阴影X轴偏转-->
        <attr name="shadowDx" format="dimension" />
        <!--阴影Y轴偏转-->
        <attr name="shadowDy" format="dimension" />
        <!--阴影颜色-->
        <attr name="shadow_color" format="color|reference" />
    </declare-styleable>

    <!--一个开关view 类似ios开关按钮-->
    <declare-styleable name="SwitchView">
        <!--是否显示按钮阴影-->
        <attr name="hasShadow" format="boolean"/>
        <!--开启状态背景色-->
        <attr name="primaryColor" format="color"/>
        <!--开启状态按钮描边色-->
        <attr name="primaryColorDark" format="color"/>
        <!--关闭状态描边色-->
        <attr name="offColor" format="color"/>
        <!--关闭状态按钮描边色-->
        <attr name="offColorDark" format="color"/>
        <!--按钮颜色-->
        <attr name="barColor" format="color"/>
        <!--背景色-->
        <attr name="bgColor" format="color"/>
        <!--按钮阴影色-->
        <attr name="shadowColor" format="color"/>
        <!--按钮宽高形状比率(0,1] 不推荐大幅度调整-->
        <attr name="ratioAspect" format="float"/>
        <!--初始化默认状态-->
        <attr name="isOpened" format="boolean"/>
    </declare-styleable>

</resources>